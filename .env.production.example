APP_NAME=SubdiPass
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://subdivipass.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=subdivipass_production
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=30

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailhost
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@subdivipass.com"
MAIL_FROM_NAME="${APP_NAME}"

# PWA Configuration
PWA_APP_NAME="SubdiPass"
PWA_APP_SHORT_NAME="SubdiPass"
PWA_APP_DESCRIPTION="Digital Pass Management System"
PWA_APP_THEME_COLOR="#4F46E5"
PWA_APP_BACKGROUND_COLOR="#FFFFFF"

# QR Code Settings
QR_SIGNATURE_KEY=
QR_STORAGE_PATH=storage/app/public/qr-codes

# Security
SESSION_SECURE_COOKIE=true
SANCTUM_STATEFUL_DOMAINS=subdivipass.com,www.subdivipass.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_MINUTE=100

# File Upload
MAX_UPLOAD_SIZE=5120
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif

# Backup
BACKUP_ENABLED=true
BACKUP_DISK=local
BACKUP_RETENTION_DAYS=30
